{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Confirmar eliminación de {{ material }}</h1>
    <form method="post" action="{{ path('confirmar_borrar_material', {'id': material.id}) }}" name="confirmar">
        <button type="submit" name="eliminar" class="btn btn-danger"><i class="fa fa-trash"></i> Sí, quiero eliminarlo</button>
        <a href="{{ path('listar_materiales', {'id': material.id}) }}" class="btn btn-info">No, quiero volver</a>
    </form>
{% endblock %}

